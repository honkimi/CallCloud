
<%= render :partial => 'shared/tel_tab', :locals => {active: 1} %>

<div id="records">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>#id</th>
        <th>From</th>
        <th>to</th>
        <th>Voice</th>
        <th>Duration</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
    <% @records.each do |record| %>
      <tr>
         <td><%= record.id %></td>
         <td><%= record.from %></td>
         <td><%= record.to %></td>
         <td><audio src="<%= record.voice_url %>" controls></audio></td>
         <td><%= record.duration %></td>
         <td><%= record.updated_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <% if @records.empty? %>
    <p class="lead nodata"><%= t('record.warn') %></p>
  <% end %>
</div>

